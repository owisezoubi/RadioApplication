<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outside border/shadow -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="200dp"
                android:height="200dp" />
            <gradient
                android:angle="135"
                android:endColor="#f4f4f4"
                android:startColor="#f4f4f4" />
        </shape>
    </item>

    <!-- Inset -->
    <item
        android:top="1dp"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="#FF9800"
                android:endColor="#F44336" />
        </shape>
    </item>


    <!-- Main button -->
    <item
        android:top="16dp"
        android:left="16dp"
        android:right="16dp"
        android:bottom="16dp">
        <shape android:shape="oval">
            <solid android:color="#00000000" />
        </shape>
    </item>

</layer-list>